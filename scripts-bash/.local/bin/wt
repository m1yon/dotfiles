#!/bin/bash

# 1. Locate the git root (Required for all commands)
repo_root=$(git rev-parse --show-toplevel 2>/dev/null)
if [[ -z "$repo_root" ]]; then
    echo "‚ùå Error: Not inside a git repository."
    exit 1
fi

worktrees_dir="$repo_root/.worktrees"

# ---------------------------------------------------------
# SUBCOMMAND: HELP / No args
# ---------------------------------------------------------
if [[ -z "$1" || "$1" == "-h" || "$1" == "--help" || "$1" == "help" ]]; then
    echo "Usage: wt <command> [args]"
    echo ""
    echo "Commands:"
    echo "  create    Create a new worktree (auto-named based on current branch)"
    echo "  rm        Remove a single worktree and its branch"
    echo "  clean     Remove all worktrees in .worktrees/"
    echo ""
    echo "Examples:"
    echo "  wt create           Create worktree named <branch>-wt-1"
    echo "  wt rm my-branch     Remove worktree and branch 'my-branch'"
    echo "  wt clean            Remove all worktrees"
    exit 0

# ---------------------------------------------------------
# SUBCOMMAND: CLEAN (Remove ALL worktrees)
# ---------------------------------------------------------
elif [[ "$1" == "clean" ]]; then
    if [[ ! -d "$worktrees_dir" ]]; then
        echo "‚ú® No worktrees found to clean."
        exit 0
    fi

    echo "üßπ Cleaning all worktrees in .worktrees/..."
    
    # Enable nullglob to handle empty directories gracefully
    shopt -s nullglob
    
    for target in "$worktrees_dir"/*; do
        if [[ -d "$target" ]]; then
            branch_name=$(basename "$target")
            
            # 1. Remove the worktree (force in case of uncommitted changes)
            git worktree remove "$target" --force 2>/dev/null
            
            # 2. Delete the branch
            # We mute errors in case the branch was already deleted manually
            git branch -D "$branch_name" >/dev/null 2>&1
            
            echo "   üî• Removed: $branch_name"
        fi
    done

    # Remove the parent folder if it's empty
    rmdir "$worktrees_dir" 2>/dev/null
    echo "‚ú® All clear."
    exit 0

# ---------------------------------------------------------
# SUBCOMMAND: RM (Remove SINGLE worktree)
# ---------------------------------------------------------
elif [[ "$1" == "rm" ]]; then
    shift # Remove 'rm'
    branch="$1"

    if [[ -z "$branch" ]]; then
        echo "Usage: wt rm <branch-name>"
        exit 1
    fi

    target_dir="$worktrees_dir/$branch"

    if [[ -d "$target_dir" ]]; then
        echo "üî• Removing worktree folder..."
        git worktree remove "$target_dir" --force
    else
        echo "‚ö†Ô∏è  Worktree folder not found at: $target_dir (checking branch only)"
    fi

    if git show-ref --verify --quiet "refs/heads/$branch"; then
        echo "üî• Deleting git branch '$branch'..."
        git branch -D "$branch"
    else
        echo "‚ö†Ô∏è  Branch '$branch' not found."
    fi

    echo "‚úÖ Cleanup complete for '$branch'."
    exit 0

# ---------------------------------------------------------
# SUBCOMMAND: CREATE (Auto-named worktree)
# ---------------------------------------------------------
elif [[ "$1" == "create" ]]; then
    # Get the current branch name
    current_branch=$(git branch --show-current)
    if [[ -z "$current_branch" ]]; then
        echo "‚ùå Error: Could not determine current branch (Detached HEAD?)."
        exit 1
    fi

    mkdir -p "$worktrees_dir"

    # Find the next available index
    index=1
    while true; do
        candidate="${current_branch}-wt-${index}"
        target_dir="$worktrees_dir/$candidate"

        branch_exists=0
        if git show-ref --verify --quiet "refs/heads/$candidate"; then branch_exists=1; fi
        
        dir_exists=0
        if [[ -d "$target_dir" ]]; then dir_exists=1; fi

        if [[ $branch_exists -eq 1 || $dir_exists -eq 1 ]]; then
            ((index++))
        else
            branch="$candidate"
            break
        fi
    done

    echo "üå≥ Creating worktree: $branch"
    
    if ! git worktree add "$target_dir" -b "$branch"; then
        echo "‚ùå Failed to create worktree."
        exit 1
    fi

    echo "üìÑ Copying .env files..."
    cp "$repo_root"/.env* "$target_dir/" 2>/dev/null

    if [[ -f "$repo_root/bun.lockb" || -f "$repo_root/bun.lock" ]]; then
        echo "ü•Ø Bun project detected. Installing dependencies..."
        (cd "$target_dir" && bun install)
    fi

    echo "‚úÖ Ready!"
    echo "   cd $target_dir"

# ---------------------------------------------------------
# UNKNOWN COMMAND
# ---------------------------------------------------------
else
    echo "Unknown command: $1"
    echo "Run 'wt --help' for usage."
    exit 1
fi
